    +SetContext(ctx context.Context)
 
    -pushCommand(cmd *Command)
}

class etcd.Manager {
	kapi client.KeysAPI
	mapi client.MembersAPI

	em *external.Manager

	adminNetwork       string
	adminIP            string
	hostRole           string
	primaryIP          string
	candidateIPs       []string
	masterDbIP         string
	metricIP           string
	primaryKeyNotFound bool
	roleChanged        bool

   +AddMember(adminIP string) : *client.Member, error
   +AdminIP() : string
   +CandidateIPs() : []string
   +EM() : *external.Manager
   +IsAgent() : bool
   +IsCandidate() : bool
   +IsMasterDb() : bool
   +IsPrimary() : bool
   +KeepAlive(key, value string, ttl time.Duration) : context.CancelFunc
   +KeepPrimary()
   +ListCandidates() : []string, error
   +ListHosts() : []string, error
   +ListMemberMap() : map[string]string, error
   +ListMembers() : []client.Member, error
}

